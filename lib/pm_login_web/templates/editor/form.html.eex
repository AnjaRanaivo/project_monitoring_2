<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Vérifiez ci-dessous:</p>
    </div>
  <% end %>

  <div class="row">
    <div class="column">
      <%= label f, "Titre" %>
      <%= text_input f, :title %>
      <%= error_tag f, :title %>
    </div>
    <div class="column">
      <%= label f, "pour société" %>
      <%= select f, :company_id, @companies, style: "width: -moz-available;" %>
      <%= error_tag f, :company_id %>
    </div>
  </div>

  <div>
    <%= submit "Enregistrer", class: "btn btn-lg btn-primary right-button" %>
  </div>
<% end %>
